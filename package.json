{
  "name": "devrecord",
  "version": "0.0.0",
  "private": true,
  "config" : {
    "build_dir" : "public/build"
  },
  "scripts": {
    "start": "node ./bin/www",
    "compile:js": "jsx --extension jsx scripts/ $npm_package_config_build_dir",
    "combine:js": "browserify $npm_package_config_build_dir/index/main.js > $npm_package_config_build_dir/index/bundle.js",
    "uglify:js": "uglifyjs $npm_package_config_build_dir/index/bundle.js > $npm_package_config_build_dir/index/bundle.min.js",
    "build" : "npm run compile:js && npm run combine:js && npm run uglify:js"
  },
  "dependencies": {
    "body-parser": "~1.12.0",
    "browserify": "^10.0.0",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "exec-glob": "^1.2.1",
    "express": "~4.12.2",
    "hbs": "~2.9.0",
    "morgan": "~1.5.1",
    "react": "^0.13.2",
    "react-tools": "^0.13.2",
    "serve-favicon": "~2.2.0",
    "stylus": "0.42.3",
    "uglifyjs": "^2.4.10"
  }
}
